<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabContainer">
        <item name="cardBackgroundColor">@color/container</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="TabLayout">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/container</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabRippleColor">@null</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicator">@drawable/bg_tab_indicator</item>
        <item name="tabTextAppearance">@style/TabTextStyle</item>
    </style>
    <style name="TabTextStyle">
        <item name="android:textSize">16sp</item>
    </style>
</resources>