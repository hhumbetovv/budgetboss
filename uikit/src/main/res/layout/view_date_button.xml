<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clickable_container"
    android:paddingVertical="18dp"
    tools:theme="@style/Theme.BudgetBoss">

    <ImageView
        android:id="@+id/dateIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:contentDescription="@null"
        android:padding="4dp"
        android:src="@drawable/ic_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/date"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/dateIcon"
        app:layout_constraintStart_toEndOf="@+id/dateIcon"
        app:layout_constraintTop_toTopOf="@+id/dateIcon" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:textColor="@color/hint"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/chevronRightIcon"
        app:layout_constraintEnd_toStartOf="@+id/chevronRightIcon"
        app:layout_constraintTop_toTopOf="@+id/chevronRightIcon"
        tools:text="31.01.2024" />

    <ImageView
        android:id="@+id/chevronRightIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_chevron_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/hint"
        tools:tint="@color/hint" />

</androidx.constraintlayout.widget.ConstraintLayout>