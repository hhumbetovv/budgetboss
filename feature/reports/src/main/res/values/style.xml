<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="padding">16dp</dimen>

    <style name="DetailsContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:background">@drawable/bg_rounded_container</item>
        <item name="android:backgroundTint">@color/container</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DetailsInfoContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="DetailTitle" parent="ContentTitle">
        <item name="android:includeFontPadding">true</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="android:paddingHorizontal">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="DetailField" parent="DetailTitle">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:visibility">gone</item>
        <item name="android:minEms">3</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="NoteTitle" parent="DetailTitle">
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NoteField" parent="DetailField">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="AccountBalanceTitle" parent="DetailTitle">
        <item name="android:textColor">@color/danger</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccountBalanceField" parent="DetailField">
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>
    
    <style name="Emoji">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:src">@drawable/ic_emoji_neutral</item>  
    </style>
    
    <style name="PositiveIcon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:src">@drawable/ic_edit</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="NegativeIcon">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:src">@drawable/ic_trash</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    
    <style name="EmptyListTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>
    
    <style name="ListScrollView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:scrollbars">none</item>
    </style>
    
    <style name="ListContainer">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IncomesTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Incomes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="List">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:nestedScrollingEnabled">false</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="ExpensesTitle" parent="IncomesTitle">
        <item name="android:textColor">@color/danger</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="Expenses" parent="Incomes">
        <item name="android:textColor">@color/danger</item>
    </style>

    <style name="AccountList">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:nestedScrollingEnabled">false</item>
    </style>

    <style name="CategoryRecordList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="Pager">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingVertical">16dp</item>
    </style>

    <style name="ReportsTabContainer" parent="TabContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/padding</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

</resources>