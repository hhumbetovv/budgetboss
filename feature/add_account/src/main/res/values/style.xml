<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="paddingHorizontal">24dp</dimen>

    <style name="NameField" parent="TextField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/paddingHorizontal</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="NoteField" parent="TextField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginHorizontal">@dimen/paddingHorizontal</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="BalanceField" parent="TextField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">@dimen/paddingHorizontal</item>
        <item name="android:inputType">numberDecimal|numberSigned</item>
    </style>

    <style name="CurrencySpinner" parent="Spinner">
        <item name="android:layout_marginRight">@dimen/paddingHorizontal</item>
    </style>

    <style name="SaveButton" parent="PrimaryBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/paddingHorizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:enabled">false</item>
    </style>
</resources>