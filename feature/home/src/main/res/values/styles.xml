<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TotalBalanceContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_rounded_container</item>
        <item name="android:backgroundTint">@color/container</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">22dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="TotalBalanceTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TotalBalance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/divider</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="AnimatedEmoji">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="EmptyListTitle" parent="ContentTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RecordList">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
</resources>