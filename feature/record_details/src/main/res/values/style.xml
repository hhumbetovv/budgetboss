<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/bg_icon_wrapper</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Sent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/danger</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Received" parent="Sent">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="RecordNoteField" parent="TextField">
        <item name="android:layout_width">0dp</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="DateButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/container</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="RecordSaveButton" parent="PrimaryBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="RecordDeleteButton" parent="PrimaryBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/frame</item>
        <item name="rippleColor">@color/danger</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>